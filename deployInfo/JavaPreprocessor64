#!/bin/bash

printusage() {
	echo "Usage: JavaPreprocessor64 simTaskFile userdir"
	exit 1
}

# main code
if [ "$#" != "2" ] ; then 
	printusage
fi

#
# include common variable definitions
#
DIR=${0%/*}
if [[ ! -d "$DIR" ]]; then DIR="$PWD"; fi
. $DIR/vcell.include

#
# make sure no variables are left unset
#
shopt -s -o nounset

jvmprop=-Xmx${postprocessor_memoryMB}M  -Dvcell.propertyfile=${common_propertyfile}"

arguments=$*

echo "starting preprocessor"

nice ${common_jre} -cp ${common_jvm_jars} ${jvmprop} ${preprocessor_mainclass} ${arguments}

echo "preprocessor returned"

exit 0

